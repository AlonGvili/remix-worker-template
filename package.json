{
  "private": true,
  "name": "remix-worker-template",
  "main": "./worker.js",
  "description": "Template repository for getting your Remix app up on Cloudflare Workers",
  "license": "MIT",
  "scripts": {
    "cleanup": "rimraf .cache ./build ./public/build worker.js",
    "build:remix": "SERVER_PLATFORM=browser remix build",
    "build:worker": "NODE_ENV=production ts-node ./build.ts",
    "build": "npm run build:remix && npm run build:worker",
    "dev:cypress": "cypress open",
    "dev:miniflare": "miniflare --build-command \"npx ts-node ./build.ts\" --disable-cache --watch",
    "dev:remix": "SERVER_PLATFORM=browser remix dev",
    "dev": "concurrently \"npm:dev:*\"",
    "postinstall": "patch-package && remix setup",
    "prebuild": "npm run cleanup",
    "test:cypress": "cypress run",
    "test": "start-server-and-test miniflare http-get://localhost:8787 test:cypress",
    "deploy": "wrangler publish",
    "start": "miniflare"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@remix-run/node": "^0.18.1",
    "@remix-run/react": "^0.18.1",
    "@remix-run/serve": "^0.18.1",
    "@remix-run/server-runtime": "^0.18.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "^0.18.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.0",
    "@remix-run/dev": "^0.18.1",
    "@testing-library/cypress": "^8.0.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "concurrently": "^6.2.1",
    "cypress": "^8.4.1",
    "esbuild": "^0.12.22",
    "miniflare": "^1.4.1",
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
