{
  "private": true,
  "name": "remix-worker-template",
  "main": "./worker.js",
  "description": "Template repository for getting your Remix app up on Cloudflare Workers",
  "license": "MIT",
  "scripts": {
    "cleanup": "rimraf .cache ./build ./public/build worker.js",
    "build:remix": "SERVER_PLATFORM=browser remix build",
    "build:worker": "esbuild ./worker.ts --bundle --minify --define:process.env.NODE_ENV=\"'production'\" --platform=browser --format=esm --outfile=worker.js",
    "build": "npm run build:remix && npm run build:worker",
    "dev": "remix run",
    "postinstall": "patch-package && remix setup",
    "prebuild": "npm run cleanup",
    "preview": "wrangler preview",
    "deploy": "wrangler publish",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@remix-run/node": "^0.18.1",
    "@remix-run/react": "^0.18.1",
    "@remix-run/serve": "^0.18.1",
    "@remix-run/server-runtime": "^0.18.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "^0.18.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.0",
    "@remix-run/dev": "^0.18.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "esbuild": "^0.12.22",
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
