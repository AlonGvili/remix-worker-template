{
  "private": true,
  "name": "remix-worker-template",
  "main": "./worker.js",
  "description": "Template repository for getting your Remix app up on Cloudflare Workers",
  "license": "MIT",
  "scripts": {
    "cleanup": "rimraf .cache ./build ./public/build ./app/styles/tailwind.css ./worker.js",
    "build:remix": "remix build",
    "build:style": "NODE_ENV=production tailwindcss -o ./app/styles/tailwind.css --minify",
    "build:worker": "NODE_ENV=production node ./scripts/build.mjs",
    "build": "npm run build:style && npm run build:remix && npm run build:worker",
    "dev:cypress": "cypress open",
    "dev:miniflare": "miniflare --build-command \"node ./scripts/build.mjs\" --disable-cache --watch",
    "dev:remix": "remix watch",
    "dev:style": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev": "concurrently \"npm:dev:*\"",
    "postinstall": "remix setup cloudflare-workers",
    "prebuild": "npm run cleanup",
    "test:cypress": "cypress run",
    "test": "start-server-and-test miniflare http-get://localhost:8787 test:cypress",
    "start": "miniflare"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^0.20.1",
    "@remix-run/react": "^0.20.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.8",
    "remix": "^0.20.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.1.1",
    "@cloudflare/wrangler": "^1.19.5",
    "@remix-run/dev": "^0.20.1",
    "@testing-library/cypress": "^8.0.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "cypress": "^8.7.0",
    "esbuild": "^0.13.13",
    "miniflare": "^1.4.1",
    "postcss": "^8.3.11",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
